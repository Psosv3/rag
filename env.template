# Configuration RAG API - Variables d'environnement
# Copiez ce fichier vers .env et remplissez les valeurs

# ===============================
# API KEYS - OBLIGATOIRES
# ===============================

# Clé API OpenAI (pour embeddings et modèles GPT)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Clé API Mistral (pour les modèles Mistral)
MISTRAL_API_KEY=your-mistral-api-key-here

# ===============================
# SUPABASE CONFIGURATION
# ===============================

# URL de votre instance Supabase
SUPABASE_URL=https://your-project.supabase.co

# Clé publique (anon) de Supabase
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Secret JWT de Supabase (pour vérification des tokens)
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-settings

# ===============================
# CONFIGURATION ENVIRONNEMENT
# ===============================

# Environnement de déploiement
ENVIRONMENT=production

# Port interne de l'API (défaut: 8000)
API_PORT=8000

# Domaine de production
DOMAIN=api-rag.onexus.tech

# ===============================
# CONFIGURATION DOCKER
# ===============================

# Port externe pour l'API (pour debug)
EXTERNAL_API_PORT=18000

# Port externe pour Nginx HTTP
EXTERNAL_HTTP_PORT=8080

# Port externe pour Nginx HTTPS
EXTERNAL_HTTPS_PORT=8443

# ===============================
# CONFIGURATION SSL
# ===============================

# Email pour Certbot (génération SSL)
SSL_EMAIL=your-email@domain.com

# ===============================
# CONFIGURATION OPTIONNELLE
# ===============================

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Taille maximale des fichiers uploadés (en MB)
MAX_FILE_SIZE=100

# Timeout pour les requêtes AI (en secondes)
AI_TIMEOUT=300 